services:
  telebot:
    image: telebot
    container_name: telebot
    environment:
      - PYTHONUNBUFFERED=1
    volumes:
      - ./config.json:/mnt/vagrant/app/config.json
      - ./images:/mnt/vagrant/app/images
      - ./chart_15min.jpeg:/mnt/vagrant/app/chart_15min.jpeg
    restart: always
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
    healthcheck:
      test: ["CMD", "python", "-c", "import requests; requests.get('https://api.telegram.org/bot$$(cat /mnt/vagrant/app/config.json | grep bot_token | cut -d '\"' -f 4)/getMe')"]
      interval: 60s
      timeout: 10s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '8'
          memory: 16G
